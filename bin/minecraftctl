#!/bin/bash

# 加载全局配置
if [ -f /etc/minecraftctl/config ]; then
  source /etc/minecraftctl/config
else
  echo "Not found /etc/minecraftctl/config !!" > /dev/stderr
  exit 2
fi

export WorkDir=`pwd`

source $InstallPath/tools/Base.sh

if [ -f "$InstallPath/module/$1.sh" ]; then
  module=$1
  shift
  exec -a "${module}" "${InstallPath}/module/${module}.sh" $@
  exit $?
else
  echo "You haven't entered any parameters" > /dev/stderr; $0 help > /dev/stderr; exit 1
fi
